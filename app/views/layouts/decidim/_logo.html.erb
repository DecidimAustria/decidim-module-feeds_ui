<% if current_user %>
  <%= link_to decidim.account_path do %>
    <% if current_user.avatar.attached? %>  
        <span class="main-bar__avatar">
          <%= image_tag(
                current_user.attached_uploader(:avatar).path(variant: :thumb),
                alt: t("decidim.author.avatar", name: decidim_sanitize(current_user.nickname))
              ) %>
        </span>
    <% else %>
      <span>
        <%#= text_initials(current_user.name) %>
        <%= current_user.name %>
      </span>
    <% end %>
  <% end %>
<% end %>
